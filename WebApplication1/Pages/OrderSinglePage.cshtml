@page
@model OrderSinglePageModel
@{

}
<link rel="stylesheet" type="text/css" href="~/css/Cart.css" />




<p1> Total price is $@Model.TotalPrice</p1>


@foreach (var cart_Item in Model.orderDTO.OrderProduct)
{
	<div class="box">
		<div class="card">
			<div class="card__image">
				<img src="@cart_Item.Product.Url" alt="Image">
			</div>
		</div>
		<div class="box-text">
			<p1>@cart_Item.ExtraInfo()</p1> <br>
			<p2>Price: @cart_Item.Product.CalculatePrice() </p2>
		</div>
	</div>

}
