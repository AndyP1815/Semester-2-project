@page
@model RegisterModel
@{


	<form method="post">
		<label asp-for="UserRegister.Username"><b>Username</b></label>
		<span asp-validation-for="UserRegister.Username"></span>
		<input asp-for="UserRegister.Username"  placeholder="Enter a Username"/>
		<label asp-for="UserRegister.Password"><b>Password</b></label>
		<span asp-validation-for="UserRegister.Password"></span>
		<input asp-for="UserRegister.Password" type="password" placeholder="enter a password"/>
		<label asp-for="UserRegister.Adress"><b>Adress</b></label>
		<span asp-validation-for="UserRegister.Adress"></span>
		<input asp-for="UserRegister.Adress" placeholder="Enter your Adress" />
		<input type="submit" value="Submit"/>
		<div>
			<label>Choose if you want to be a normal user or a seller:</label>
			<div>
				<label><input type="radio" name="myBoolean" value="true" required>User</label>
				<label><input type="radio" name="myBoolean" value="false" required>Seller</label>
			</div>

		</div>
		
	</form>
}
@if (!ModelState.IsValid)
{
	<div class="alert alert-danger">
		<h4>@ViewData["ErrorTitle"]</h4>
		<hr />
		<p>@ViewData["ErrorMessage"]</p>
		<ul>
			@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<li>@error.ErrorMessage</li>
			}
		</ul>
	</div>
}